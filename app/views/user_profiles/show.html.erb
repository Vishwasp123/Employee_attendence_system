<h2 style="width: 40%;
  text-align: center; margin: 0 auto; margin-top: 50px;">User Profile Details</h2>

<div class="card">
  <%# <img src="img_avatar.png" alt="Avatar" style="width:100%"> %>
  <div class="container">
    <h4><b>Name:<%= @user_profile.first_name %> <%= @user_profile.last_name %></b></h4> 
    <p>Phone Number:<%= @user_profile.phone_number %></p> 
     <p>Address:<%= @user_profile.address %></p> 
        <li>
          <%= link_to "Back", user_profiles_path %>
          <%= link_to "Edit", edit_user_profile_path(@user_profile)  %>
          <%= link_to "Destroy", user_profile_path(@user_profile),  data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"} %> 
      </li> 
  </div>
</div>



<style>
.card {
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
  width: 40%;
  text-align: center;
  
  /* Center the card horizontally */
  margin: 0 auto;
}

.card:hover {
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

.container {
  padding: 2px 16px;
}
</style>