<div class="container mt-5">
  <h1><%= action_name.capitalize %> Attendance</h1>
  <%= form_with(model: [@warehouse, @attendance], local: true, class: 'needs-validation') do |form| %>
    <% if @attendance.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h2><%= pluralize(@attendance.errors.count, "error") %> prohibited this attendance from being saved:</h2>
        <ul>
          <% @attendance.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :check_in_time %>
      <%= form.datetime_select :check_in_time, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :latitude %>
      <%= form.text_field :latitude, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :longitude %>
      <%= form.text_field :longitude, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
  <%= link_to 'Back', warehouse_attendances_path(@warehouse), class: 'btn btn-secondary' %>
</div>
